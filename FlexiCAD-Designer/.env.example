# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these from your Supabase project dashboard > Settings > API
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
# ===========================================
# STRIPE CONFIGURATION (Required for payments)
# ===========================================
# Get these from your Stripe dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===========================================
# ADMIN USER CONFIGURATION (Optional)
# ===========================================
# Admin user details for the create-admin script
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_secure_password_here
ADMIN_NAME=Your Admin Name

# ===========================================
# OPENAI CONFIGURATION (Required for AI generation)
# ===========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-2024-08-06
OPENAI_ASSISTANT_ID=your_assistant_id_here
OPENAI_VECTOR_STORE_ID=your_vector_store_id_here

# ===========================================
# APPLICATION CONFIGURATION (Optional)
# ===========================================
# Environment mode
NODE_ENV=development
APP_ENV=development

# Security settings
ENFORCE_HTTPS=false
ENABLE_CSP=false

# Application settings
APP_NAME=FlexiCAD Designer
APP_VERSION=0.1.0
SUPPORT_EMAIL=your_support_email@example.com

# Payment settings
PAYMENT_CURRENCY=aud # Australian Dollars
PAYMENT_AMOUNT=1000 # $10.00 Monthly
PAYMENT_DESCRIPTION=MONTHLY Access to FlexiCAD Designer
PAYMENT_INTERVAL=month, year


# ===========================================
# SECURITY NOTES:
# ===========================================
# 1. NEVER commit the actual .env file to version control
# 2. Use strong, unique passwords for admin accounts
# 3. Rotate API keys regularly
# 4. Use different keys for development and production
# 5. Enable 2FA on all service accounts (Supabase, Stripe, etc.)